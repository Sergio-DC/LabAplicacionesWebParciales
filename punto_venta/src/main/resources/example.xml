<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<!-- 
  - This file is included by the struts.xml file as an example
  - of how to break up the configuration file into multiple files.
-->
<struts>
    <package name="example" namespace="/example" extends="struts-default">

        <default-action-ref name="MainLogin" />

        <action name="HelloWorld" class="lab_webapps.parciales.punto_venta.example.HelloWorld">
            <result>/WEB-INF/example/HelloWorld.jsp</result>
        </action>

        <action name="Login_*" method="{1}" class="lab_webapps.parciales.punto_venta.example.Login">
            <result name="input">/WEB-INF/example/Login.jsp</result>
            <result type="redirectAction">Menu</result>
        </action>

        <action name="*" class="lab_webapps.parciales.punto_venta.example.ExampleSupport">
            <result>/WEB-INF/example/{1}.jsp</result>
        </action>

        <!-- Add additional "example" package actions here. -->
        <action name="MainLogin" class="lab_webapps.parciales.punto_venta.example.Login">
            <result>/WEB-INF/example/Login.jsp</result>
        </action>

    </package>
</struts>
